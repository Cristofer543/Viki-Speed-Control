{
  "manifest_version": 3,
  "name": "Viki Speed Control",
  "version": "1.0",
  "description": "Ajusta la velocidad de reproducci√≥n de videos en Viki.com",
  "default_locale": "en",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "increase_speed": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      },
      "description": "Increase playback speed"
    },
    "decrease_speed": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      },
      "description": "Decrease playback speed"
    },
    "reset_speed": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Reset playback speed"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.viki.com/*"],
      "js": ["popup.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
